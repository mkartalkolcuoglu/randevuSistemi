{
  "buildCommand": "cd ../.. && npx turbo run build --filter=admin...",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/whatsapp/check-reminders",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/otp/cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/send-reminders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/daily-staff-reminder",
      "schedule": "30 5 * * *"
    },
    {
      "path": "/api/cron/daily-owner-summary",
      "schedule": "30 17 * * *"
    }
  ]
}
